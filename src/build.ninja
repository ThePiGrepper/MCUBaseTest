build $builddir/$project_name.elf: CLINK $builddir/main.o $
                                      $builddir/stm32f30x_it.o $
                                      $builddir/system_stm32f30x.o $
                                      $builddir/startup_stm32f302x8.o $
                                      $builddir/stm32f30x_misc.o $
                                      $builddir/stm32f30x_exti.o $
                                      $builddir/stm32f30x_flash.o $
                                      $builddir/stm32f30x_rcc.o $
                                      $builddir/stm32f30x_gpio.o

build $builddir/$project_name.hex: OBJCOPY $builddir/$project_name.elf
default $builddir/$project_name.hex
