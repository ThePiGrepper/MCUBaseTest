#project specific variables
#external libraries
stlib = ../../STM32F30x_StdPeriph_Lib
project_name = sample_project

#ninja make configuration
builddir = ../obj
tool = arm-none-eabi-gcc
cflags = -mcpu=cortex-m4 -mlittle-endian -mthumb
deflst = -DSTM32F302x8 -DUSE_STDPERIPH_DRIVER
incdir =  -I./ $
          -I./include $
          -I$stlib/CMSIS/Core $
          -I$stlib/CMSIS/Device $
          -I$stlib/STM32F30x_StdPeriph_Driver/inc $

cscript = -T../../linker_scripts/stm32f302r8.ld

rule OBJCOPY
  command = arm-none-eabi-objcopy -Oihex $in $out && arm-none-eabi-size $in
  description = Creating $out hexfile

rule CC
  depfile = $out.d
  deps = gcc
  command = $tool -MMD -MF $out.d  -g -Os -Wall -fdata-sections -ffunction-sections $cflags $incdir $deflst -c $in -o $out
  description = Compiling $in

rule CLINK
  command = $tool -g $cflags $deflst $cscript -Wl,--gc-sections $in -o $out
  description = Linking $out

build $builddir/main.o: CC main.c
build $builddir/stm32f30x_it.o: CC stm32f30x_it.c
build $builddir/system_stm32f30x.o: CC system_stm32f30x.c
#build $builddir/system_stm32f4xx.o: CC $stlib/CMSIS/Device/system_stm32f4xx.c
build $builddir/startup_stm32f302x8.o: CC $stlib/CMSIS/Device/startup/gcc_ride7/startup_stm32f302x8.s
build $builddir/stm32f30x_misc.o: CC $stlib/STM32F30x_StdPeriph_Driver/src/stm32f30x_misc.c
build $builddir/stm32f30x_exti.o: CC $stlib/STM32F30x_StdPeriph_Driver/src/stm32f30x_exti.c
build $builddir/stm32f30x_flash.o: CC $stlib/STM32F30x_StdPeriph_Driver/src/stm32f30x_flash.c
build $builddir/stm32f30x_rcc.o: CC $stlib/STM32F30x_StdPeriph_Driver/src/stm32f30x_rcc.c
build $builddir/stm32f30x_gpio.o: CC $stlib/STM32F30x_StdPeriph_Driver/src/stm32f30x_gpio.c
#build $builddir/stm32f30x_dac.o: CC $stlib/STM32F30x_StdPeriph_Driver/src/stm32f30x_dac.c
#build $builddir/stm32f30x_rtc.o: CC $stlib/STM32F30x_StdPeriph_Driver/src/stm32f30x_rtc.c
#build $builddir/stm32f30x_adc.o: CC $stlib/STM32F30x_StdPeriph_Driver/src/stm32f30x_adc.c
#build $builddir/stm32f30x_dbgmcu.o: CC $stlib/STM32F30x_StdPeriph_Driver/src/stm32f30x_dbgmcu.c
#build $builddir/stm32f30x_can.o: CC $stlib/STM32F30x_StdPeriph_Driver/src/stm32f30x_can.c
#build $builddir/stm32f30x_spi.o: CC $stlib/STM32F30x_StdPeriph_Driver/src/stm32f30x_spi.c
#build $builddir/stm32f30x_crc.o: CC $stlib/STM32F30x_StdPeriph_Driver/src/stm32f30x_crc.c
#build $builddir/stm32f30x_dma.o: CC $stlib/STM32F30x_StdPeriph_Driver/src/stm32f30x_dma.c
#build $builddir/stm32f30x_syscfg.o: CC $stlib/STM32F30x_StdPeriph_Driver/src/stm32f30x_syscfg.c
#build $builddir/stm32f30x_i2c.o: CC $stlib/STM32F30x_StdPeriph_Driver/src/stm32f30x_i2c.c
#build $builddir/stm32f30x_iwdg.o: CC $stlib/STM32F30x_StdPeriph_Driver/src/stm32f30x_iwdg.c
#build $builddir/stm32f30x_tim.o: CC $stlib/STM32F30x_StdPeriph_Driver/src/stm32f30x_tim.c
